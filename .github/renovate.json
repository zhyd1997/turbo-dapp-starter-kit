{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separatePatchReleases"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Group React ecosystem updates",
      "groupName": "React ecosystem",
      "matchPackageNames": ["react", "react-dom", "/^@types\\/react/"],
      "automerge": false,
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Group Next.js updates",
      "groupName": "Next.js",
      "matchPackageNames": ["next", "/^eslint-config-next/"],
      "automerge": false,
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Group Web3 updates",
      "groupName": "Web3",
      "matchPackageNames": ["^@rainbow-me/", "^wagmi$", "^viem$"],
      "automerge": false,
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Group Hardhat updates",
      "groupName": "Hardhat",
      "matchPackageNames": ["^hardhat$", "^@nomicfoundation/"],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Group TypeScript ecosystem",
      "groupName": "TypeScript",
      "matchPackageNames": [
        "typescript",
        "/^@types\\//",
        "/^typescript-eslint/"
      ],
      "excludePackageNames": [
        "@types/chai",
        "@types/react",
        "@types/react-dom"
      ],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Group ESLint ecosystem",
      "groupName": "ESLint",
      "matchPackageNames": ["eslint", "/^eslint-/", "/^@eslint\\//"],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Group build tools",
      "groupName": "Build tools",
      "matchPackageNames": [
        "turbo",
        "prettier",
        "/^@tailwindcss\\//",
        "/^tailwindcss/"
      ],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 10am on monday"]
    },
    {
      "description": "Auto-merge patch and minor updates for utility packages",
      "groupName": "Utilities",
      "matchPackageNames": [
        "clsx",
        "class-variance-authority",
        "tailwind-merge",
        "lucide-react"
      ],
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "description": "Group Chai updates",
      "groupName": "Chai",
      "matchPackageNames": ["chai", "@types/chai"],
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 10am on monday"]
    }
  ],
  "schedule": ["before 10am on monday"],
  "timezone": "UTC",
  "labels": ["dependencies"],
  "assignees": ["zhyd1997"],
  "reviewers": ["zhyd1997"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "postUpdateOptions": ["pnpmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on monday"]
  }
}
